# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
tab_width = 4
max_line_length = 120

[*.{inc,js,json,php,py,sh,txt}]
indent_size = 4

[*.{blade,css,less,htaccess,html,phtml,scss,sql,twig}]
indent_size = 2

[*.{inc,js,php}]
indent_brace_style = K&R

[Makefile,*.{py,sh}]
indent_style = tab
